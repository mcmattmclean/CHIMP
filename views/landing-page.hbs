<h3>Edit Your Information</h3>
<p>{{charity}}</p>
<form action="/charities/{{currentUser._id}}?_method=PUT" method="POST" >
  <div class="form-group">
    <label for="name">Charity Name</label>
    <input type="text" class="form-control" id="name" name="name" value="{{charity.name}}">
  </div>
  <div class="form-group">
    <label for="missionStatement">Mission Statement</label>
    <textarea class="form-control" id="missionStatement" name="missionStatement">{{charity.missionStatement}}</textarea>
  </div>
  <div class="form-group">
    <label for="street">Street Address</label>
    <input type="text" class="form-control" id="street" name="street" value="{{charity.address.street}}">
  </div>
  <div class="form-group">
    <label for="city">City</label>
    <input type="text" class="form-control" id="city" name="city" value="{{charity.address.city}}">
  </div>
  <div class="form-group">
    <label for="state">State</label>
    <input type="text" class="form-control" id="state" name="state" value="{{charity.address.state}}">
  </div>
  <div class="form-group">
    <label for="zipcode">Zip</label>
    <input type="text" class="form-control" id="zipcode" name="zipcode" value="{{charity.address.zip}}">
  </div>
  <input type="hidden" name="address_id" value="{{charity.address._id}}">
  <input type="submit" class="btn btn-danger" value="Submit">
</form>

